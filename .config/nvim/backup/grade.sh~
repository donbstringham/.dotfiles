#!/bin/sh

if [ $# -eq 0 ]
  then
    echo "Directory argument required"
fi

cp in.txt $1/src
cp out.txt $1/src

cd $1/src

gcc ex01.c -o ex01
gcc ex02.c -o ex02
gcc ex03.c -o ex03
gcc ex04.c -o ex04
gcc ex05.c -o ex05
gcc ex06.c -o ex06
gcc ex07.c -o ex07
gcc ex08.c -o ex08
gcc ex09.c -o ex09
gcc ex10.c -o ex10
gcc ex11.c -o ex11
gcc ex12.c -o ex12
gcc ex13.c -o ex13
gcc ex14.c -o ex14

./ex01 in.txt out.txt
./ex02 in.txt out.txt
./ex03 in.txt out.txt
./ex04 in.txt
./ex05 in.txt
./ex06 in.txt out.txt
./ex07 /tmp 
./ex08
./ex09 in.txt
./ex10 in.txt
./ex11
./ex12
./ex13 in.txt
./ex14 in.txt

cd ../..
